<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CustomerDetailFragment">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:layout_marginTop="25dp"
        android:text="@string/tvName"
        app:layout_constraintBottom_toTopOf="@+id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_name"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:text="@string/tvEmail"
        app:layout_constraintBottom_toTopOf="@+id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:drawableEnd="@drawable/ic_email"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="359dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|left"
        android:text="@string/tvPhone"
        app:layout_constraintBottom_toTopOf="@+id/tvCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        android:drawableEnd="@drawable/ic_phone"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|left"
        android:text="@string/tvCity"
        app:layout_constraintBottom_toTopOf="@+id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        android:drawableEnd="@drawable/ic_city"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/border_style"
        android:gravity="center_vertical|left"
        android:text="@string/tvAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/ic_address"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCity" />
</androidx.constraintlayout.widget.ConstraintLayout>