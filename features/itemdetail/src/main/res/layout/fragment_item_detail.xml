<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ItemDetailFragment">

    <!-- Info -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvItemDetailInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/cvItemDetailDescr"
        app:layout_constraintEnd_toStartOf="@+id/gItemCreationEnd"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintStart_toStartOf="@+id/gItemCreationStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- item values -->
            <TextView
                android:id="@+id/tvItemDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="nameHere"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemListEmptyText"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvItemDetailRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="rateHere"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailRateTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvItemDetailTaxable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="yes/no"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailTaxableTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvItemDetailType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="producto/servicio"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailTypeTitle"
                app:layout_constraintVertical_bias="0.0" />

            <!-- helpers -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gItemDetailStartCardInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gItemDetailMiddleCardInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- decoration lines-->
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemListEmptyText" />

            <View
                android:id="@+id/view2"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailTypeTitle" />

            <View
                android:id="@+id/view3"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailTaxableTitle" />

            <View
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDetailRateTitle" />

            <!-- titles -->
            <TextView
                android:id="@+id/tvItemListEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tiet_item_detail_name"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvItemDetailTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tiet_item_detail_type"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvItemDetailRateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiet_item_detail_rate"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />

            <TextView
                android:id="@+id/tvItemDetailTaxableTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiet_item_detail_tax"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailMiddleCardInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.59000003" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvItemDetailDescr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintBottom_toTopOf="@+id/gItemDetailBottom"
        app:layout_constraintEnd_toStartOf="@+id/gItemCreationEnd"
        app:layout_constraintStart_toStartOf="@+id/gItemCreationStart"
        app:layout_constraintTop_toBottomOf="@+id/cvItemDetailInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec viverra dapibus nisi a mollis. In ultrices ipsum et turpis congue ultrices. Etiam et nunc ac tortor luctus dapibus pulvinar molestie ex. Maecenas venenatis tellus sed erat convallis, id semper sem viverra. Donec lacus tortor, lobortis nec est vitae, feugiat congue nunc. Donec eget tortor quis dui viverra laoreet. Duis imperdiet convallis massa, vulputate pretium mauris malesuada blandit. Vivamus posuere orci sed lectus pulvinar tincidunt. Donec quis faucibus ex, sit amet porta odio. Phasellus et dolor dui. "
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardDescr"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view4"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardDescr"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tiet_item_detail_descr"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/gItemDetailStartCardDescr"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gItemDetailStartCardDescr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!--Helpers-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gItemCreationStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gItemCreationEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gItemDetailBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <!--Button-->
    <Button
        android:id="@+id/bItemCreationAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/b_item_detail_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>